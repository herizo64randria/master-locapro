{% extends 'base.html.twig' %}

{% block titre %}{{ groupe.numero }} - {{ heureMarche.datedebut|date('d/m/Y') }}{% endblock %}
{% block titre_page %}Détails: <a href="{{ path('groupe_show', {'id' : groupe.numero}) }}">{{ groupe.numero }}</a> ({{ groupe.site.emplacement }}) - {{ heureMarche.datedebut|date('d/m/Y') }}{% endblock %}
{% block titre_description %}{% endblock %}
{% block body %}


    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">
                            Détails sur l'heure de marche:
                        </h3>

                    </div>

                    <!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-striped">
                            <tr>
                                <th>Heure(s) de marche: </th>
                                <td>{{ heureMarche.heure }}</td>
                            </tr>
                            <tr>
                                <th>Production: </th>
                                <td>{{ heureMarche.production }}</td>
                            </tr>
                            <tr>
                                <th>Consomation: </th>
                                <td>{{ heureMarche.consomation }}</td>
                            </tr>
                            <tr>
                                <th>CSP: </th>
                                <td>{{ heureMarche.csp }}</td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <b>Note/Autre: </b>
                                    {% if not heureMarche.note or heureMarche.note == '' %}
                                        ---
                                    {% else %}
                                        {{ heureMarche.note }}
                                    {% endif %}
                                </td>
                            </tr>

                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">

                <div class="col-md-6">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">
                                Vidange
                            </h3>

                        </div>

                        <!-- /.box-header -->
                        <div class="box-body">
                            {% if heureMarche.vidange %}
                                {% set vidange = heureMarche.vidange %}
                                <table class="table table-striped">
                                    <tr>
                                        <td>Groupe: </td>
                                        <td>{{ vidange.groupe.numero }} / {{ vidange.groupe.site.emplacement }}</td>
                                    </tr>
                                    <tr>
                                        <td>Type:</td>
                                        <td>{{ vidange.type }}</td>
                                    </tr>
                                    <tr>
                                        <td>Heure de marche à la vidange:</td>
                                        <td>{{ vidange.heureMarche|number_format(0, ',', ' ') }}</td>
                                    </tr>
                                    <tr>
                                        <td>Huile utilisé:</td>
                                        <td>{{ vidange.huileUtilise }} L</td>
                                    </tr>
                                </table>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">
                                Appoint
                            </h3>

                        </div>

                        <!-- /.box-header -->
                        <div class="box-body">
                            {% if heureMarche.appoint %}
                                {% set appoint = heureMarche.appoint %}
                                <table class="table table-striped">
                                    <tr>
                                        <td>Huile utilisé:</td>
                                        <td>{{ appoint.huileUtilise }}</td>
                                    </tr>
                                </table>
                            {% endif %}
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

